    <h1>Productos en Tiempo Real</h1>
    <form id="addProductForm">
        <input type="text" name="productName" placeholder="Nombre del producto" required>
        <input type="number" name="productQuantity" placeholder="Cantidad" required>
        <button type="submit">Agregar Producto</button>
    </form>
</div>
<div>
    <form id="deleteProductForm">
        <input type="number" name="productId" placeholder="ID del producto a eliminar" required>
        <button type="submit">Eliminar Producto</button>
    </form>
</div>